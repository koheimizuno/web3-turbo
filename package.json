{
  "name": "turborepo-web3-starter-kit",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel",
    "hardhat:compile": "turbo run compile --scope=contracts",
    "hardhat:node": "turbo run node --scope=contracts",
    "hardhat:test": "turbo run sol:test --scope=contracts",
    "test": "turbo run test",
    "prettier": "prettier --check \"**/*.{ts,tsx,md}\"",
    "prettier:fix": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "storybook": "turbo run storybook",
    "build-storybook": "turbo run build-storybook",
    "clean": "turbo run clean && rm -rf node_modules",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "changeset": "changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/react-hooks": "^7.0.2",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.0",
    "esbuild": "^0.14.10",
    "esbuild-jest": "^0.5.0",
    "lint-staged": "^12.1.3",
    "husky": "^8.0.2",
    "prettier": "latest",
    "turbo": "latest",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.4.7",
    "jest-watch-typeahead": "^1.0.0",
    "msw": "^0.36.3"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=16"
  },
  "packageManager": "yarn@1.22.19",
  "lint-staged": {
    "apps/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/**/*.{js,ts,jsx,tsx}": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
